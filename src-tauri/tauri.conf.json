{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vid-ap-play",
  "version": "0.1.0",
  "identifier": "com.vid-ap-play.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vid-ap-play",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "media-src": "asset: http://asset.localhost"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
